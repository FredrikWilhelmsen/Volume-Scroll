{
    "manifest_version": 2,
    "name": "Volume Scroll",
    "version": "3.0.0",
    "description": "Scrollable volume for any video on the internet",
  
    "icons": {
      "128": "/images/128.png"
    },
  
    "browser_action": {
      "default_popup": "dist/popup.html"
    },

    "content_scripts": [
      {
        "matches": ["*"],
        "js": ["dist/volumeScroll.tsx"]
      }
    ]
}
  
{
    "manifest_version": 2,
    "name": "Volume Scroll",
    "version": "3.0.0",
    "description": "Scrollable volume for any video on the internet",
    "homepage_url": "https://github.com/FredrikWilhelmsen/Volume-Scroll/",

    "icons": {
        "128": "/images/128.png"
    },

    "browser_action": {
        "default_popup": "dist/popup.html"
    },

    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "all_frames": true,
            "run_at": "document_start",
            "css": [
                "dist/volumeScroll.css"
            ],
            "js": [
                "dist/volumeScroll.js"
            ]
        }
    ]
}
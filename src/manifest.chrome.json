{
    "manifest_version": 3,
    "name": "Volume Scroll",
    "version": "3.1.0",
    "description": "Scrollable volume for any video on the internet",
    "homepage_url": "https://github.com/FredrikWilhelmsen/Volume-Scroll/",
    "permissions": [
        "storage",
        "activeTab"
    ],
    "icons": {
        "128": "images/128.png"
    },
    "action": {
        "default_icon": "images/128.png",
        "default_title": "Volume Scroll",
        "default_popup": "popup.html"
    },
    "background": {
        "service_worker": "volumeScrollBackground.tsx",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "all_frames": true,
            "run_at": "document_start",
            "css": [
                "volumeScroll.css"
            ],
            "js": [
                "volumeScroll.tsx"
            ]
        }
    ]
}